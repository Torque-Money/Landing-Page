---
import Nav from "./Nav/index.astro";

import Image from "../Image/index.astro";
import Link from "../Link/index.astro";
import ParagraphLeft from "../Text/Paragraph/ParagraphLeft/index.astro";
import Emphasise from "../Text/Emphasise/index.astro";
import Accent from "../Text/Accent/index.astro";
---

<header class="w-4/5 mx-auto">
    <Nav />
    <div class="xl:mt-32 mt-8 flex xl:flex-row flex-col xl:items-start items-center justify-evenly xl:space-y-0 space-y-16 xl:space-x-32 w-11/12 mx-auto">
        <div class="flex flex-col items-start space-y-8" style="min-width: 300px">
            <div class="text-5xl font-bold text-white pt-32">
                <h1>DeFi The</h1>
                <h1 class="text-6xl"><Accent>Future</Accent></h1>
            </div>
            <ParagraphLeft>
                Torque provides the highest <Emphasise>leverage</Emphasise> and
                <Emphasise>onchain-optimized LP </Emphasise> APY's possible in
                <Emphasise>DeFi</Emphasise>. 100% decentralized and permissionless.
            </ParagraphLeft>
            <Link href="https://app.torque.money/">
                Get Started
            </Link>
        </div>
        <Image src="/assets/APP.png" width="800" alt="Torque application" />
    </div>
</header>